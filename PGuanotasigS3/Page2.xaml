<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PGuanotasigS3.Page2">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property = "TextColor" Value="Fuchsia" />
                <Setter Property = "FontSize"  Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Style="{StaticResource stackLayoutStyle}">
            <Label Text="Ventana dos Estilo 2" FontSize="18" HorizontalTextAlignment="Center" />
            <Label x:Name="lblDatoUno" Style="{StaticResource labelStyle}" />
            <Label x:Name="lblDatoDos" Style="{StaticResource labelStyle}"/>
            <Button x:Name="btnAbrir" Text="Abir ventana 2" Clicked="btnAbrir_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>